<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="top"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:background="@color/Dark_green_bg"
    android:padding="5dp"
    tools:context="com.developers.droidteam.merisafety.Frag_verification">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttons_background"
            android:text="@string/contact_details"
            android:textSize="25sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv1"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/Light_green_layouts"
            android:text="@string/we_need_some_extra_information"
            android:textSize="25sp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="11"
                android:textColorHint="#fff">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/enternum"
                    android:layout_width="300dp"
                    android:gravity="center"
                    android:text="+"
                    android:inputType="number"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/enter_mobile_number_here"
                    android:textSize="20sp"
                    android:layout_margin="10dp"
                    />
            </android.support.design.widget.TextInputLayout>

       <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textColor="@color/Light_green_layouts"
        android:text="@string/if_not_receiving_otp_then_check_network_strenth"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/Light_green_layouts"
            android:text="@string/we_don_t_share_your_information_with_any_third_party_organizations"
           />
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/proceed"
            android:textSize="20sp"
            android:id="@+id/proceed1"
            android:layout_margin="5dp"
            android:typeface="sans"
            android:textStyle="bold"
            android:textColor="@color/Light_grey_text"
            android:background="@drawable/buttons_background"
            />
</LinearLayout>





