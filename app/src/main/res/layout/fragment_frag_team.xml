<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:tag="team"
    android:layout_height="match_parent"
    tools:context="com.developers.droidteam.merisafety.Frag_team">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttons_background"
            android:text="The Brains Behind MeriSafety"
            android:fontFamily="cursive"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#000"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_margin="2dp"
           android:padding="2dp"
           android:background="@drawable/text_background"
           android:layout_weight="2"
           android:orientation="horizontal">
           <FrameLayout
               android:layout_width="140dp"
               android:layout_margin="3dp"
               android:layout_height="140dp">

               <ImageView
                   android:layout_width="140dp"
                   android:layout_height="140dp"
                   android:id="@+id/abhi" />
               <ProgressBar
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:id="@+id/prog_abhi"
                   />

           </FrameLayout>
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:orientation="vertical"
             android:layout_weight="2">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Abhinav"
                   android:layout_gravity="start"
                   android:textStyle="italic"
                   android:textSize="25sp"
                   android:textColor="#000"/>
               <TextView
                   android:layout_margin="2dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/about_abhi"
                   android:textAlignment="viewStart"
                   android:textStyle="italic"
                   android:textSize="18sp"
                   android:textColor="@color/Dark_grey_text"/>
           </LinearLayout>
          </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:background="@drawable/text_background"
            android:layout_weight="2"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paras"
                    android:layout_gravity="right"
                    android:textStyle="italic"
                    android:textSize="25sp"
                    android:textColor="#000"/>
                <TextView
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_paras"
                    android:textAlignment="viewEnd"
                    android:background="@drawable/text_background"
                    android:textStyle="italic"
                    android:textSize="18sp"
                    android:textColor="@color/Dark_grey_text"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="140dp"
                android:layout_margin="3dp"
                android:layout_height="140dp">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:id="@+id/paras" />
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/prog_paras"
                    />

            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="2dp"
            android:background="@drawable/text_background"
            android:layout_weight="2"
            android:layout_margin="2dp"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="140dp"
                android:layout_margin="3dp"
                android:layout_height="140dp">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:id="@+id/priya" />
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/prog_priya"
                    />

            </FrameLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Priya"
                    android:layout_gravity="left"
                    android:textStyle="italic"
                    android:textSize="25sp"
                    android:textColor="#000"/>
                <TextView
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_priya"
                    android:textAlignment="viewStart"
                    android:textStyle="italic"
                    android:textSize="18sp"
                    android:textColor="@color/Dark_grey_text"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:padding="2dp"
            android:background="@drawable/text_background"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ridhima"
                    android:layout_gravity="right"
                    android:textStyle="italic"
                    android:textSize="25sp"
                    android:textColor="#000"/>
                <TextView
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_ridhi"
                    android:textAlignment="viewEnd"
                    android:textStyle="italic"
                    android:textSize="18sp"
                    android:textColor="@color/Dark_grey_text"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="140dp"
                android:layout_margin="3dp"
                android:layout_height="140dp">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:id="@+id/ridhima"
                    />
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/prog_ridhi"
                    />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="2dp"
            android:background="@drawable/text_background"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="140dp"
                android:layout_margin="3dp"
                android:layout_height="140dp">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:id="@+id/siddharth" />
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/prog_sid"
                    />

            </FrameLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Siddharth"
                    android:layout_gravity="left"
                    android:textStyle="italic"
                    android:textSize="25sp"
                    android:textColor="#000"/>
                <TextView
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_sid"
                    android:textAlignment="viewStart"
                    android:textStyle="italic"
                    android:textSize="18sp"
                    android:textColor="@color/Dark_grey_text"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="2dp"
            android:background="@drawable/text_background"
            android:layout_weight="2"
            android:layout_margin="2dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunny"
                    android:layout_gravity="right"
                    android:textStyle="italic"
                    android:textSize="25sp"
                    android:textColor="#000"/>
                <TextView
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_sunny"
                    android:textAlignment="viewEnd"
                    android:textStyle="italic"
                    android:textSize="18sp"
                    android:textColor="@color/Dark_grey_text"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="140dp"
                android:layout_margin="3dp"
                android:layout_height="140dp">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:id="@+id/sunny" />
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/prog_sun"
                    />

            </FrameLayout>
        </LinearLayout>
       </LinearLayout>
</ScrollView>
