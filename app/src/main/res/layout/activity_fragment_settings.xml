<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv1"
        android:layout_weight="0"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="34dp"
        app:srcCompat="@drawable/audiorecweb" />

    <View
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:layout_alignRight="@id/iv1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="34dp"
        android:layout_toRightOf="@id/iv1"
        android:background="@color/colorPrimary"
        android:visibility="visible"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <Switch
                android:id="@+id/sw1"
                android:layout_width="match_parent"
                android:textColor="#fff"
                android:layout_weight="1"
                android:layout_marginTop="34dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="Audio Recording" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textSize="13dp"
                android:textColor="#fff"
                android:text="Turning this feature off will disable the audio recording and sender will not receive the audio content"
                />

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="49dp"
            android:layout_height="54dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="34dp"
            app:srcCompat="@mipmap/ic_launcher_video" />

        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_alignRight="@id/iv2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="34dp"
            android:layout_toRightOf="@id/iv2"
            android:background="@color/colorPrimary"
            android:visibility="visible"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <Switch
                android:id="@+id/sw2"
                android:layout_width="match_parent"
                android:textColor="#fff"
                android:layout_weight="1"
                android:layout_marginTop="34dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="Video Recording" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textSize="13dp"
                android:textColor="#fff"
                android:text="Turning this feature off will disable the video recording and sender will not receive the video content"
                />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv3"
            android:layout_weight="0"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="34dp"
            app:srcCompat="@drawable/audio" />

        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_alignRight="@id/iv3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="34dp"
            android:layout_toRightOf="@id/iv3"
            android:background="@color/colorPrimary"
            android:visibility="visible"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <Switch
                android:id="@+id/sw3"
                android:layout_width="match_parent"
                android:textColor="#fff"
                android:layout_weight="1"
                android:layout_marginTop="34dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="Emergency call" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textSize="13dp"
                android:textColor="#fff"
                android:text="Turning this feature off will disable the emergency call feature at the time of calling"
                />

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="47dp"
            android:layout_height="57dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="34dp"
            app:srcCompat="@drawable/trigger" />

        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_alignRight="@id/iv4"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="34dp"
            android:layout_toRightOf="@id/iv4"
            android:background="@color/colorPrimary"
            android:visibility="visible"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <Switch
                android:id="@+id/sw4"
                android:layout_width="match_parent"
                android:textColor="#fff"
                android:layout_weight="1"
                android:layout_marginTop="34dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="Trigger" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textSize="13dp"
                android:textColor="#fff"
                android:text="Turning this feature off will disable all the triggers."
                />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>